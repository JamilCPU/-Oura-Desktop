<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AvaloniaSidebar.ViewModels"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="800"
        x:Class="AvaloniaSidebar.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Oura Sidebar"
        Background="#1E1E1E">
    <StackPanel Margin="20" Spacing="20">
        <TextBlock Text="Oura" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
        
        <Border Background="#2D2D2D" CornerRadius="8" Padding="15">
            <StackPanel Spacing="8">
                <TextBlock Text="Steps" FontSize="14" Foreground="#CCCCCC"/>
                <TextBlock Text="{Binding Steps}" FontSize="32" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{Binding StepGoal}" FontSize="12" Foreground="#888888"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
