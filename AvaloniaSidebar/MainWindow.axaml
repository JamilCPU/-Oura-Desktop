<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AvaloniaSidebar.ViewModels"
        xmlns:conv="clr-namespace:AvaloniaSidebar.Converters"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="800"
        x:Class="AvaloniaSidebar.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Oura Sidebar"
        Background="#1E1E1E">
    <Window.Resources>
        <conv:StringToColorConverter x:Key="StringToColorConverter"/>
    </Window.Resources>
    <StackPanel>
        <!-- Header with title and buttons -->
        <Grid Margin="12,12,4,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Oura Sidebar" FontSize="20" FontWeight="Bold" Foreground="White" 
                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
            
            <StackPanel Orientation="Horizontal" Grid.Column="1" Spacing="4" VerticalAlignment="Center">
                <Button Name="MinimizeButton" Content="─" Width="24" Height="24" FontSize="16" FontWeight="Bold" 
                        Background="#2A2A2A" Foreground="#CCCCCC" BorderThickness="0" 
                        Cursor="Hand" Click="MinimizeButton_Click" Padding="0">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#333333"/>
                        </Style>
                    </Button.Styles>
                </Button>
                <Button Name="CloseButton" Content="✕" Width="24" Height="24" FontSize="16" FontWeight="Bold" 
                        Background="#2A2A2A" Foreground="#CCCCCC" BorderThickness="0" 
                        Cursor="Hand" Click="CloseButton_Click" Padding="0">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#F44336"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </Grid>
        
        <ScrollViewer>
            <StackPanel Margin="12,0,12,12" Spacing="10">
            
            <!-- Heart Rate Card -->
            <Border Background="#1E1E1E" CornerRadius="10" Padding="8" Margin="12,12,12,12">
                <StackPanel Spacing="6">
                    <TextBlock Text="Avg 24hr Heart Rate" FontSize="12" Foreground="#CCCCCC"/>
                    <TextBlock Text="{Binding HeartRateBpm}" FontSize="36" FontWeight="Bold">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding HeartRateColor, Converter={StaticResource StringToColorConverter}}"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <!-- Activity Card -->
            <Border Background="#1E1E1E" CornerRadius="10" Padding="14" Margin="12,12,12,12">
                <StackPanel Spacing="6">
                    <TextBlock Text="Activity" FontSize="12" Foreground="#CCCCCC"/>
                    <TextBlock Text="{Binding Steps}" FontSize="36" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding StepGoal}" FontSize="11" Foreground="#888888" Margin="0,0,0,4"/>
                    
                    <!-- Progress Bar -->
                    <Border Background="#1A1A1A" CornerRadius="3" Height="6" Margin="0,2,0,0">
                        <Border CornerRadius="3" HorizontalAlignment="Left" Height="6" Width="{Binding StepsProgressWidth}">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding StepsProgressColor, Converter={StaticResource StringToColorConverter}}"/>
                            </Border.Background>
                        </Border>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Stress Card -->
            <Border Background="#1E1E1E" CornerRadius="10" Padding="14" Margin="12,12,12,12">
                <StackPanel Spacing="6">
                    <TextBlock Text="Stress" FontSize="12" Foreground="#CCCCCC"/>
                    <TextBlock Text="{Binding StressLevel}" FontSize="36" FontWeight="Bold">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding StressColor, Converter={StaticResource StringToColorConverter}}"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
            </Border>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</Window>
