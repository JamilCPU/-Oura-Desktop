<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AvaloniaSidebar.ViewModels"
        xmlns:conv="clr-namespace:AvaloniaSidebar.Converters"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="800"
        x:Class="AvaloniaSidebar.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Oura Sidebar"
        Background="#1E1E1E">
    <Window.Resources>
        <conv:StringToColorConverter x:Key="StringToColorConverter"/>
    </Window.Resources>
    <ScrollViewer>
        <StackPanel Margin="12,12,24,12" Spacing="10">
            <TextBlock Text="Oura" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
            
            <!-- Heart Rate Card -->
            <Border Background="#2D2D2D" CornerRadius="10" Padding="8" Margin="12,12,48,12">
                <StackPanel Spacing="6">
                    <TextBlock Text="Heart Rate" FontSize="12" Foreground="#CCCCCC"/>
                    <TextBlock Text="{Binding HeartRateBpm}" FontSize="36" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding HeartRateTimestamp}" FontSize="11" Foreground="#888888"/>
                </StackPanel>
            </Border>
            
            <!-- Activity Card -->
            <Border Background="#2D2D2D" CornerRadius="10" Padding="14" Margin="12,12,48,12">
                <StackPanel Spacing="6">
                    <TextBlock Text="Activity" FontSize="12" Foreground="#CCCCCC"/>
                    <TextBlock Text="{Binding Steps}" FontSize="36" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding StepGoal}" FontSize="11" Foreground="#888888" Margin="0,0,0,4"/>
                    
                    <!-- Progress Bar -->
                    <Border Background="#1A1A1A" CornerRadius="3" Height="6" Margin="0,2,0,0">
                        <Border Background="#4CAF50" CornerRadius="3" HorizontalAlignment="Left" Height="6" Width="{Binding StepsProgressWidth}"/>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Stress Card -->
            <Border Background="#2D2D2D" CornerRadius="10" Padding="14" Margin="12,12,48,12">
                <StackPanel Spacing="6">
                    <TextBlock Text="Stress" FontSize="12" Foreground="#CCCCCC"/>
                    <TextBlock Text="{Binding StressLevel}" FontSize="36" FontWeight="Bold">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding StressColor, Converter={StaticResource StringToColorConverter}}"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>
